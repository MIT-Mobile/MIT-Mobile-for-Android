<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@color/rowBackground">
        
    <edu.mit.mitmobile2.SearchBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/librarySearchBar" />
        
    <edu.mit.mitmobile2.DividerView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dividerHeight" />
        
    <edu.mit.mitmobile2.TwoLineActionRow
        android:id="@+id/libraryAccount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/action_secure"
        android:text="Your Account" />
        
    <edu.mit.mitmobile2.DividerView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dividerHeight" />
        
    <edu.mit.mitmobile2.TwoLineActionRow
        android:id="@+id/libraryLocationHours"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Locations &amp; Hours" />
        
    <edu.mit.mitmobile2.DividerView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dividerHeight" />
        
        
    <edu.mit.mitmobile2.TwoLineActionRow
        android:id="@+id/libraryAskUs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Ask Us!" />
        
    <edu.mit.mitmobile2.DividerView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dividerHeight" />
    
    <edu.mit.mitmobile2.TwoLineActionRow
        android:id="@+id/libraryTellUs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/action_secure"
        android:text="Tell Us!" />
        
    <edu.mit.mitmobile2.DividerView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dividerHeight" />
       
    <!--  gap between sections --> 
    <View
    	android:background="@drawable/main_repeat"
    	android:layout_width="fill_parent"
    	android:layout_height="25dip" />
    	
    <edu.mit.mitmobile2.DividerView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dividerHeight" />
        
    <LinearLayout
        android:background="@color/rowBackground"
        android:id="@+id/libraryMainLinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" />   
        
    <edu.mit.mitmobile2.FullScreenLoader
        android:id="@+id/linkLoading"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:visibility="gone" />
        
    <View
    	android:background="@drawable/main_repeat"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent" />

        
</LinearLayout>
