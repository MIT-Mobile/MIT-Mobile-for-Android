<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:background="@drawable/main_repeat"
	android:layout_width="fill_parent"
 	android:layout_height="wrap_content">
 	
	<TextView
		android:paddingLeft="@dimen/horizontalPadding"
		android:paddingBottom="@dimen/horizontalPadding"
		android:paddingTop="@dimen/verticalPadding"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@android:color/transparent"
		android:text="@string/people_search_instructions" 
		android:textColor="#ff000000"
		style="@style/SmallPrint" />
		
	<edu.mit.mitmobile2.SectionHeader
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="TEST" />
		
	<LinearLayout android:id="@+id/facilitiesMainActionList"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@color/rowBackground"
		android:orientation="vertical">
		
		<!--  Report a Problem Button -->
		<edu.mit.mitmobile2.TwoLineActionRow
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/facilitiesReportAProblemRow"
			android:textStyle="normal" />
		
		<View
			android:layout_width="fill_parent"
			android:layout_height="@dimen/dividerHeight"
			android:background="@color/dividerColor" />
			
		<!-- Call Facilities Button -->
		<edu.mit.mitmobile2.TwoLineActionRow
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/facilitiesCallFacilitiesRow" />
	
	</LinearLayout>
		
</LinearLayout>
