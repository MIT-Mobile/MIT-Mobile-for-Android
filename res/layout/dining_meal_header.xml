<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="#ff333333">
  
  <TextView 
      android:id="@+id/diningMealHeaderTitle"
      android:textColor="#fff"
      android:textSize="12sp"
      android:layout_alignParentLeft="true"
      android:layout_centerVertical="true"
      android:paddingLeft="@dimen/standardPadding"
      android:paddingTop="@dimen/halfStandardPadding"
      android:paddingBottom="@dimen/halfStandardPadding"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      />
  
  
  <TextView 
      android:id="@+id/diningMealHeaderTime"
      android:textColor="#fff"
      android:textSize="12sp"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
       android:paddingRight="@dimen/standardPadding"
      android:paddingTop="@dimen/halfStandardPadding"
      android:paddingBottom="@dimen/halfStandardPadding"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      />
    
</RelativeLayout>