<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:layout_width="fill_parent"
  android:layout_height="24dip"
  android:paddingLeft="@dimen/standardPadding"
  android:paddingRight="@dimen/standardPadding"
  android:background="#ff979797" >
  

 	<ImageView
	    android:id="@+id/loaderLoadingImage"
	    android:src="@drawable/sm_busybox"
	    android:scaleType="center"
	    android:layout_width="15dip"
	    android:layout_height="24dip"/>
	    
	<TextView
		android:id="@+id/loaderLoadingMessageTV"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:paddingLeft="4dip"
		android:layout_gravity="center_vertical" 
		android:textColor="#8cffffff"
		style="@style/SmallPrint" />
		
 
	<TextView 
		android:id="@+id/loaderTV" 
		android:visibility="gone"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical" 
		android:textColor="#8cffffff"
		style="@style/SmallPrint" />
	
</LinearLayout>
