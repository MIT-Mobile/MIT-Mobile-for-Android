<?xml version="1.0" encoding="UTF-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
	
	<RelativeLayout
		android:background="#ffffff"
		android:paddingRight="@dimen/horizontalPadding"
		android:paddingLeft="@dimen/horizontalPadding"
		android:paddingTop="@dimen/verticalPadding"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		
			<ImageButton
				android:background="@android:color/transparent"
				android:id="@+id/tourVoiceOverButton"
				android:src="@drawable/audio_normal"
				android:layout_alignParentRight="true"
				android:layout_alignParentTop="true"
				android:layout_width="40dip"
				android:layout_height="40dip" />
			
			<TextView 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_toLeftOf="@id/tourVoiceOverButton"
				android:id="@+id/tourStopTitle" 
				style="@style/ContentTitle" />
			
	</RelativeLayout>
	
	<WebView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:id="@+id/tourStopWebView" />

</merge>
