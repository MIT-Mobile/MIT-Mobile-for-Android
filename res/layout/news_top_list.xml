	<edu.mit.mitmobile2.LoaderBar
		android:id="@+id/newsLoaderBar"
		android:layout_gravity="bottom"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" />
					
		
</LinearLayout>
