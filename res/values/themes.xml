<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Main">
		<item name="android:windowBackground">@drawable/main_repeat</item>
		<item name="android:background">@android:color/transparent</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:listViewStyle">@style/Lists</item>
	</style>
	
	<style name="PlainBackground" parent="@style/Main">
		<item name="android:windowBackground">@color/plainBackground</item>
	</style>
	
	<!--  row styles -->
	<style name="Lists">
		<item name="android:background">#ffffffff</item>
		<item name="android:cacheColorHint">#ffffffff</item>
		
		<item name="android:divider">@color/dividerColor</item>
		<item name="android:dividerHeight">@dimen/dividerHeight</item>
		<item name="android:listSelector">@drawable/highlight_background</item>
	</style>
	
	<style name="PageTitle">
		<item name="android:textStyle">normal</item>
		<item name="android:textSize">17sp</item>
		<item name="android:textColor">#ffffffff</item>
		<item name="android:typeface">sans</item>
	</style>
	
	<style name="PageSubtitle">
		<item name="android:textStyle">normal</item>
		<item name="android:textSize">18sp</item>
		<item name="android:textColor">#fff0f0f0</item>
		<item name="android:typeface">sans</item>
	</style>
	
	<style name="ListItemPrimary">
		<item name="android:textStyle">normal</item>
		<item name="android:textSize">17sp</item>
		<item name="android:textColor">#ff222222</item>
		<item name="android:typeface">sans</item>
	</style>
	
	<style name="ListItemSecondary">
		<item name="android:textStyle">normal</item>
		<item name="android:textSize">13sp</item>
		<item name="android:textColor">#8c222222</item>
		<item name="android:typeface">sans</item>
	</style>
	
	<style name="ListValue">
		<item name="android:textStyle">normal</item>
		<item name="android:textSize">17sp</item>
		<item name="android:textColor">#ff000000</item>
		<item name="android:typeface">sans</item>
	</style>
	
	<style name="Label">
		<item name="android:textStyle">normal</item>
		<item name="android:textSize">15sp</item>
		<item name="android:textColor">#ff990000</item>
		<item name="android:typeface">sans</item>
	</style>
	
	<style name="FormLabel">
		<item name="android:textStyle">normal</item>
		<item name="android:textSize">17sp</item>
		<item name="android:textColor">#ff333333</item>
		<item name="android:typeface">sans</item>
		<item name="android:paddingTop">@dimen/halfStandardPadding</item>
		<item name="android:paddingBottom">@dimen/halfStandardPadding</item>
	</style>
	
	<!--  content styles -->
	<style name="ContentTitle">
		<item name="android:textStyle">normal</item>
		<item name="android:textSize">24sp</item>
		<item name="android:textColor">#ff222222</item>
		<item name="android:typeface">sans</item>
	</style>
	
	<style name="Deck">
		<item name="android:textStyle">normal</item>
		<item name="android:textSize">17sp</item>
		<item name="android:textColor">#ff505050</item>
		<item name="android:typeface">sans</item>
	</style>
	
	<style name="Byline">
		<item name="android:textStyle">normal</item>
		<item name="android:textSize">12sp</item>
		<item name="android:textColor">#ff505050</item>
		<item name="android:typeface">sans</item>
	</style>
	
	<style name="Caption">
		<item name="android:textStyle">normal</item>
		<item name="android:textSize">11sp</item>
		<item name="android:textColor">#ff999999</item>
		<item name="android:typeface">sans</item>
	</style>
	
	<style name="BoldBodyText">
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">15sp</item>
		<item name="android:textColor">#ff202020</item>
		<item name="android:typeface">sans</item>
	</style>
	
	<style name="BodyText">
		<item name="android:textStyle">normal</item>
		<item name="android:textSize">15sp</item>
		<item name="android:textColor">#ff202020</item>
		<item name="android:typeface">sans</item>
	</style>
	
	<style name="SubHead">
		<item name="android:textStyle">normal</item>
		<item name="android:textSize">15sp</item>
		<item name="android:textColor">#ffffffff</item>
		<item name="android:typeface">sans</item>
	</style>
	
	<style name="SmallPrint">
		<item name="android:textStyle">normal</item>
		<item name="android:textSize">15sp</item>
		<item name="android:textColor">#8c222222</item>
		<item name="android:typeface">sans</item>
	</style>

	<style name="ToolbarTappable">
		<item name="android:textStyle">normal</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">#ffffffff</item>
		<item name="android:typeface">sans</item>
	</style>
	<color name="ToolbarTappableDisabled">#ff999999</color>

	<style name="ToolbarTitle">
		<item name="android:textStyle">normal</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">#ffffffff</item>
		<item name="android:typeface">sans</item>
	</style>
	
	<style name="ActionButtons">
		<item name="android:textStyle">normal</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">#ff4b4b4b</item>
		<item name="android:typeface">sans</item>
	</style>
	
	<style name="InfoTitle">
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">15sp</item>
		<item name="android:textColor">#8c222222</item>
		<item name="android:typeface">sans</item>
	</style>			
    	
	<style name="TabTitle">
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">@color/tab_text_color</item>
		<item name="android:typeface">sans</item>
	</style>		

	<style name="MenuItemLabel">
		<item name="android:textStyle">normal</item>
		<item name="android:textSize">15sp</item>
		<item name="android:textColor">#ffffff</item>
		<item name="android:typeface">sans</item>
	</style>	
		
	<style name="BoldRed">
	    <item name="android:textColor">#ff990000</item>
	    <item name="android:textStyle">bold</item>
	</style>

	<!-- library status -->
	<style name="LibraryStatus">
		<item name="android:textStyle">normal</item>
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">#ff000000</item>
		<item name="android:typeface">sans</item>
	</style>

	<style name="LibraryFineStatus">
		<item name="android:textStyle">normal</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">@color/libraries_gray</item>
		<item name="android:typeface">sans</item>
	</style>
	
	<style name="FineBalance">
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">#ff000000</item>
		<item name="android:typeface">sans</item>
	</style>
	
	<dimen name="standardPadding">12dip</dimen>
	<dimen name="halfStandardPadding">6dip</dimen>
	
	<dimen name="moduleHomeUnderlineWidth">2dip</dimen>
        <color name="moduleHomeUnderlineColor">#993333</color>
        <color name="homeButtonBackgroundColor">#993333</color>

</resources>
