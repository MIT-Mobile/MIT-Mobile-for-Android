<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_marginTop="?android:attr/actionBarSize"
    android:scrollbars="none"
    >

<LinearLayout
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/resource_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/resource_view_name"
        style="@style/ResourceViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/resource_view_status"
        style="@style/ResourceViewStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/resource_view_room_label"
        style="@style/ResourceViewLocationLabel"
        android:text="LOCATION"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dip"/>


    <TextView
    android:layout_width="fill_parent"
    android:layout_height="1dip"
    android:background="@color/color_dark_grey" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/resource_view_room"
            style="@style/ResourceViewRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"/>

        <ImageView
            android:src="@drawable/menu_maps"
            android:id="@+id/resource_view_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <!-- HARD CODED HOURS -->
    <TextView
        android:id="@+id/resource_view_hours_label"
        style="@style/ResourceViewLocationLabel"
        android:text="HOURS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dip"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/color_dark_grey" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <!-- DAY/HOURS Layout -->
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="0dip"
        >

        <!-- M - F -->
        <TextView
            android:text="Monday - Friday"
            android:layout_width="0dip"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:gravity="right"
            style="@style/ResourceViewAttributeLabel"
            android:paddingRight="5dip"
            />

        <!-- 9 -5  -->
        <TextView
            android:text="9am - 5pm"
            android:layout_width="0dip"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:gravity="left"
            style="@style/ResourceViewAttributeValue"
            android:paddingLeft="5dip"
            />

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="0dip"
        >

        <!-- S -->
        <TextView
            android:text="Saturday"
            android:layout_width="0dip"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:gravity="right"
            style="@style/ResourceViewAttributeLabel"
            android:paddingRight="5dip"
            />

        <!-- 12 - 5  -->
        <TextView
            android:text="12pm - 5pm"
            android:layout_width="0dip"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:gravity="left"
            style="@style/ResourceViewAttributeValue"
            android:paddingLeft="5dip"
            />

    </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="0dip"
            >

            <!-- SU -->
            <TextView
                android:text="Sunday"
                android:layout_width="0dip"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:gravity="right"
                style="@style/ResourceViewAttributeLabel"
                android:paddingRight="5dip"
                />

            <!-- closed  -->
            <TextView
                android:text="closed"
                android:layout_width="0dip"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:gravity="left"
                style="@style/ResourceViewAttributeValue"
                android:paddingLeft="5dip"
                />

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/resource_view_specifications_label"
        style="@style/ResourceViewSpecificationsLabel"
        android:text="Specifications"
        android:paddingTop="20dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TableLayout
        android:id="@+id/resource_view_attribute_table"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:paddingLeft="3dip"
        android:paddingRight="3dip"
        android:stretchColumns="0" />

</LinearLayout>

</ScrollView>