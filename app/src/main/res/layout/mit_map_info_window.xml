<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/map_popup_view_padding">

    <TextView
        android:id="@+id/top_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/contents_text"
        android:textSize="@dimen/shuttle_home_content_size" />

    <TextView
        android:id="@+id/bottom_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/contents_text"
        android:textSize="@dimen/shuttle_map_prediction_size"
        android:maxWidth="180dp" />

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/shuttle_map_prediction_size"
        android:textColor="@color/mit_grey_2"
        android:visibility="gone"/>
</LinearLayout>