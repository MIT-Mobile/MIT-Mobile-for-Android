<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context="edu.mit.mitmobile2.dining.fragments.HouseMenuFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ListView
            android:id="@+id/menu_detail_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dinning_house_padding"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dinning_house_padding"
            android:paddingRight="@dimen/dinning_house_padding"
            android:text="@string/dining_no_menu_info"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            />
    </LinearLayout>
</LinearLayout>