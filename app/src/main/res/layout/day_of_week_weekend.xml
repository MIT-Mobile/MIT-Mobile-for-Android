<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/calendar_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:gravity="center_horizontal"
        android:textAllCaps="true"
        android:textColor="@color/mit_grey"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/calendar_date"
        android:layout_width="@dimen/events_calendar_size"
        android:layout_height="@dimen/events_calendar_size"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/calendar_date_other_selector"
        android:gravity="center"
        android:textColor="@color/mit_grey"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>