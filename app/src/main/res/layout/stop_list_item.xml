<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shuttle_stop_selector">

    <ImageView
        android:id="@+id/stop_icon"
        android:layout_width="@dimen/shuttle_route_stop_padding"
        android:layout_height="@dimen/shuttle_route_stop_padding"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/shuttle_route_image_padding"
        android:layout_alignParentLeft="true" />

    <RelativeLayout
        android:id="@+id/stop_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/stop_icon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/shuttle_route_image_padding"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/stop_name"
            style="@style/MITShuttleRoutesStopsContent" />

        <TextView
            android:id="@+id/stop_prediction"
            style="@style/MITShuttleRoutesMinutesContent" />
    </RelativeLayout>

    <View
        android:id="@+id/stop_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/stop_name_layout"
        style="@style/MITView" />
</RelativeLayout>
