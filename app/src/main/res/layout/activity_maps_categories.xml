<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.mit.mitmobile2.maps.activities.MapsCategoriesActivity">

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/map_categories_tabhost"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        app:pstsShouldExpand="true"
        app:pstsTextColorSelected="@color/mit_red" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/divider_grey" />

    <android.support.v4.view.ViewPager
        android:id="@+id/map_categories_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/account_tabhost" />
</RelativeLayout>
