<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <WebView
        android:id="@+id/emergency_webview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/emergency_cell_padding" />

    <TextView
        android:id="@+id/emergency_tv_posted"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/emergency_cell_padding"
        android:layout_marginRight="@dimen/emergency_cell_padding"
        android:layout_height="wrap_content" />

</LinearLayout>