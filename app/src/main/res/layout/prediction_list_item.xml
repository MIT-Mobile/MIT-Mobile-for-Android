<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/shuttle_stop_cell_height"
    android:background="@color/white">

    <TextView
        android:id="@+id/prediction_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/actionbar_back_button_spacing"
        android:layout_centerVertical="true"
        android:textColor="@color/contents_text"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/alert_icon"
        android:layout_width="@dimen/shuttle_stop_icon_size"
        android:layout_height="@dimen/shuttle_stop_icon_size"
        android:layout_marginRight="@dimen/actionbar_back_button_spacing"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/alarm_icon" />

    <TextView
        android:id="@+id/alarm_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/alert_icon"
        android:text="@string/alarm_set"
        android:layout_centerVertical="true"
        android:paddingRight="10dp" />

</RelativeLayout>