<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/transparent_map_overlay"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/shuttle_routes_map_header_height"
        android:background="@color/transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/transparent_map_overlay"
        android:background="@color/sbc_layout_view">

        <android.support.v4.view.ViewPager
            android:id="@+id/prediction_view_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>


