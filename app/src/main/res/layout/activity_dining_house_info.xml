<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/dining_house_padding"
    android:paddingTop="@dimen/dining_house_padding"
    android:orientation="vertical"
    tools:context="edu.mit.mitmobile2.dining.activities.DinningHouseInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dining_house_padding"
        android:layout_marginTop="@dimen/dining_schedule_padding_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/house_image_view"
            android:layout_width="@dimen/dining_image_view_size"
            android:layout_height="@dimen/dining_image_view_size"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dining_house_padding"
            android:orientation="vertical">
            <TextView
                android:id="@+id/house_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/house_status_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/MITView"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dining_schedule_padding_vertical"
            android:layout_marginTop="@dimen/dining_schedule_padding_vertical"
            android:text="@string/payment"
            android:textColor="@color/statusbar_red"
            android:textSize="@dimen/dining_house_title_text_size"
            />

        <TextView
            android:id="@+id/payment_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dining_schedule_padding_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/dining_house_content_text_size"
            />
    </LinearLayout>

    <View
        style="@style/MITView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dining_schedule_padding_vertical"
            android:layout_marginTop="@dimen/dining_schedule_padding_vertical"
            android:textColor="@color/statusbar_red"
            android:textSize="@dimen/dining_house_title_text_size"
            android:text="@string/hours"
            />

        <LinearLayout
            android:id="@+id/house_hours_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            />
    </LinearLayout>

    <View
        style="@style/MITView" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dining_schedule_padding_vertical"
            android:layout_marginBottom="@dimen/dining_schedule_padding_vertical"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dining_schedule_padding_vertical"
                android:text="@string/house_location"
                android:textColor="@color/statusbar_red"
                android:textSize="@dimen/dining_house_title_text_size"
                />

            <TextView
                android:id='@+id/location_text_view'
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/dining_house_content_text_size"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dining_menu_image_size"
            android:layout_height="@dimen/dining_menu_image_size"
            android:layout_marginRight="@dimen/dining_house_padding"
            android:src="@drawable/ic_navigation"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <View
        style="@style/MITView" />
</LinearLayout>