<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.mit.mitmobile2.libraries.activities.AccountActivity">

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/account_tabhost"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        app:pstsShouldExpand="true"
        app:pstsTextColorSelected="@color/mit_red" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/divider_grey" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="edu.mit.mitmobile2.maps.activities.MapItemPagerActivity" />

</LinearLayout>


