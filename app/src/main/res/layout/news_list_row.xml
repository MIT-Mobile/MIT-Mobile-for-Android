<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shuttle_route_selector"
    android:orientation="horizontal"
    android:padding="@dimen/news_cell_padding">

    <ImageView
        android:id="@+id/news_article_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/news_cell_padding"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/news_article_title"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/news_article_lede"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mit_grey" />

    </LinearLayout>

</LinearLayout>
