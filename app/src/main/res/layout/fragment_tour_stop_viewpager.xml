<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="edu.mit.mitmobile2.tour.fragment.TourStopViewPagerFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/sbc_layout_view"
    android:id="@+id/tour_stop_scrollview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id='@+id/stop_image_view'
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:padding="@dimen/tour_home_padding"
            android:id="@+id/stop_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/tour_home_title_size"
            android:textStyle="bold"
            />

        <WebView
            android:id="@+id/stop_body_web_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            />
    </LinearLayout>
</ScrollView>
