<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="MITShuttleRoutesLabel">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingBottom">@dimen/shuttle_routes_content_padding</item>
        <item name="android:paddingTop">@dimen/shuttle_routes_content_padding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/shuttle_routes_content_size</item>
        <item name="android:textColor">@color/contents_text</item>
    </style>
    
    <style name="MITShuttleRoutesView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/shuttle_routes_view_height</item>
        <item name="android:background">@color/silver</item>
    </style>

    <style name="MITShuttleRoutesStopsContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingBottom">@dimen/shuttle_routes_content_padding</item>
        <item name="android:paddingTop">@dimen/shuttle_routes_content_padding</item>
        <item name="android:textColor">@color/contents_text</item>
        <item name="android:textSize">@dimen/shuttle_routes_content_size</item>
    </style>

    <style name="MITShuttleRoutesImage">
        <item name="android:layout_width">@dimen/shuttle_routes_image_size</item>
        <item name="android:layout_height">@dimen/shuttle_routes_image_size</item>
        <item name="android:paddingBottom">@dimen/shuttle_routes_content_padding</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingTop">@dimen/shuttle_routes_content_padding</item>
    </style>

    <style name="MITShuttleRoutesMinutesContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/shuttle_routes_stops_content_margin</item>
        <item name="android:paddingBottom">@dimen/shuttle_routes_content_padding</item>
        <item name="android:paddingTop">@dimen/shuttle_routes_content_padding</item>
        <item name="android:textColor">@color/contents_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/shuttle_routes_content_size</item>
    </style>
</resources>
