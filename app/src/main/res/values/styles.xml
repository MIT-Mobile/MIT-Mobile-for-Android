<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!--Shuttle theme. -->
    <style name="MITShuttleRoutesLabel">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/shuttle_home_content_size</item>
        <item name="android:textColor">@color/contents_text</item>
        <item name="android:paddingLeft">@dimen/shuttle_home_route_padding</item>
    </style>

    <style name="MITView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/shuttle_listview_divider_height</item>
        <item name="android:background">@color/divider_grey</item>
    </style>

    <style name="MITShuttleRoutesStopsContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/contents_text</item>
        <item name="android:textSize">@dimen/shuttle_home_content_size</item>
    </style>

    <style name="MITShuttleRoutesImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="MITShuttleRoutesMinutesContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/shuttle_routes_stops_content_margin</item>
        <item name="android:textColor">@color/contents_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/shuttle_home_content_size</item>
    </style>

    <!--tour theme. -->
    <style name="MITTourHomeContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/tour_home_content_size</item>
        <item name="android:textColor">@color/contents_text</item>
        <item name="android:paddingLeft">@dimen/tour_home_padding</item>
    </style>

    <style name="MITTourHomeImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:tint">@color/mit_red</item>
        <item name="android:paddingRight">@dimen/tour_home_padding</item>
    </style>

    <style name="MITTourStopIcon">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
