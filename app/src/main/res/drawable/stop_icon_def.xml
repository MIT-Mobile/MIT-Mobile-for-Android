<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:left="30dp" android:right="30dp">
        <shape
            android:shape="rectangle">
            <size
                android:width="3dp"
                android:height="40dp"/>
            <solid android:color="@color/stop_dot_color" />
        </shape>
    </item>

    <item android:top="40dp" android:bottom="40dp" android:left="15dp" android:right="15dp">
        <shape android:shape="oval">
            <size
                android:width="30dp"
                android:height="30dp" />
            <solid android:color="@color/stop_dot_color" />
        </shape>
    </item>

</layer-list>