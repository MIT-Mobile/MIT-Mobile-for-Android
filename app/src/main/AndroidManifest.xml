<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.mit.mitmobile2">

    <permission
        android:name="com.vogella.android.locationapi.maps.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="com.vogella.android.locationapi.maps.permission.MAPS_RECEIVE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!--        android:theme="@android:style/Theme.Holo.Light" -->

    <application
        android:name=".MitMobileApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/mit_logo_for_action_bar"
        android:theme="@style/MITMobile">
        <activity
            android:name=".ModuleSelectorActivity"
            android:launchMode="singleTop"
            android:theme="@style/Theme.MyTheme">
            <intent-filter android:label="MIT Mobile">
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter android:label="moduleSelector">
                <data android:scheme="mitmobile2" />

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".news.NewsActivity"
            android:label="@string/title_activity_news"
            android:launchMode="singleTop"
            android:theme="@style/Theme.MyTheme"/>
        <activity
            android:name=".shuttles.ShuttlesActivity"
            android:label="@string/title_activity_shuttles"
            android:launchMode="singleTop"
            android:theme="@style/Theme.MyTheme"/>
        <activity
            android:name=".maps.MapsActivity"
            android:label="@string/title_activity_maps"
            android:launchMode="singleTop"
            android:theme="@style/Theme.MyTheme"/>
        <activity
            android:name=".events.EventsActivity"
            android:label="@string/title_activity_events"
            android:launchMode="singleTop"
            android:theme="@style/Theme.MyTheme"/>
        <activity
            android:name=".people.PeopleActivity"
            android:label="@string/title_activity_people"
            android:launchMode="singleTop"
            android:theme="@style/Theme.MyTheme"/>
        <activity
            android:name=".tour.TourActivity"
            android:label="@string/title_activity_tours"
            android:launchMode="singleTop"
            android:theme="@style/Theme.MyTheme"/>
        <activity
            android:name=".emergency.EmergencyActivity"
            android:label="@string/title_activity_emergency"
            android:launchMode="singleTop"
            android:theme="@style/Theme.MyTheme"/>
        <activity
            android:name=".libraries.LibrariesActivity"
            android:label="@string/title_activity_libraries"
            android:launchMode="singleTop"
            android:theme="@style/Theme.MyTheme"/>
        <activity
            android:name=".facilities.FacilitiesActivity"
            android:label="@string/title_activity_facilities"
            android:launchMode="singleTop"
            android:theme="@style/Theme.MyTheme"/>
        <activity
            android:name=".dining.DiningActivity"
            android:label="@string/title_activity_dining"
            android:launchMode="singleTop"
            android:theme="@style/Theme.MyTheme"/>
        <activity
            android:name=".qrreader.QrreaderActivity"
            android:label="@string/title_activity_qrreader"
            android:launchMode="singleTop"
            android:theme="@style/Theme.MyTheme"/>
        <activity
            android:name=".links.LinksActivity"
            android:label="@string/title_activity_links"
            android:launchMode="singleTop"
            android:theme="@style/Theme.MyTheme"/>
        <activity
            android:name=".resources.ResourcesActivity"
            android:label="@string/title_activity_resources"
            android:launchMode="singleTop"
            android:theme="@style/Theme.MyTheme">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- Google Maps API Key -->
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyA2e9sTg9cL2oKUPbX6KQwOCYirNSJaFmQ" />

        <activity
            android:name=".resources.ResourceViewActivity"
            android:label="@string/title_activity_resource_view"
            android:theme="@style/Theme.MyTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.mit.mitmobile2.resources.ResourcesActivity"/>
        </activity>
    </application>

</manifest>